{
  "name": "ssr-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for ReactJS project with ExpressJS server",
  "main": "server/bin/server.js",
  "scripts": {
    "dev:client": "webpack-dev-server --config webpack/client.dev.js",
    "dev:server": "nodemon --exec babel-node server/start.js",
    "dev": "npm-run-all --parallel dev:client dev:server",
    "build": "npm-run-all build:client && npm run build:server",
    "build:server": "NODE_ENV=production PORT=80 webpack --config webpack/server.prod.js --progress",
    "build:client": "NODE_ENV=production webpack --config webpack/client.prod.js --progress",
    "deploy": "npm run build && node server/bin/www",
    "start": "node server/bin/www"
  },
  "keywords": [
    "react",
    "express",
    "webpack",
    "babel",
    "express",
    "react router v4",
    "redux",
    "server side rendering"
  ],
  "author": "parkoon",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@babel/node": "^7.7.7",
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/polyfill": "^7.7.0",
    "@babel/preset-env": "^7.7.7",
    "@babel/preset-react": "^7.7.4",
    "babel-loader": "^8.0.6",
    "clean-webpack-plugin": "^3.0.0",
    "cross-env": "^6.0.3",
    "file-loader": "^5.0.2",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "ignore-loader": "^0.1.2",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.13.0",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "postcss-flexbugs-fixes": "^4.1.0",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.7.0",
    "sass-loader": "^8.0.0",
    "terser-webpack-plugin": "^2.3.1",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "url-loader": "^3.0.0",
    "webpack": "^4.41.4",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.10.1",
    "webpack-merge": "^4.2.2",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "classnames": "^2.2.6",
    "js-cookie": "^2.2.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-redux": "^7.1.3",
    "react-router-dom": "^5.1.2",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0",
    "helmet": "^3.21.2",
    "hpkp": "^2.0.0",
    "mongoose": "^5.8.3",
    "morgan": "^1.9.1",
    "ms": "^2.1.2",
    "csrf": "^3.1.0",
    "css-loader": "^3.4.0",
    "csurf": "^1.10.0",
    "express": "^4.17.3",
    "express-status-monitor": "^1.2.7",
    "cluster": "^0.7.7",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "http-errors": "^1.7.3"
  }
}
